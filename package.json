{
  "name": "HappyTreeFriends",
  "productName": "Happy Tree Friends",
  "description": "A local party game made during CiGA GameJam 2017 Xiamen station",
  "private": false,
  "version": "0.4.0",
  "build": {
    "appId": "org.cocos2dx.HappyTreeFriends",
    "asar": false,
    "mac": {
      "category": "public.app-category.games"
    },
    "postinstall": "install-app-deps",
    "forceCodeSigning": true
  },
  "main": "main.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development electron main.js",
    "startp": "cross-env NODE_ENV=production electron main.js",
    "pack": "build --dir",
    "dist": "build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pandamicro/HappyTreeFriends.git"
  },
  "keywords": [
    "local",
    "multiplayer",
    "game",
    "GameJam"
  ],
  "author": "Pandamicro",
  "license": "MIT", 
  "bugs": {
    "url": "https://github.com/pandamicro/HappyTreeFriends/issues"
  },
  "homepage": "https://github.com/pandamicro/HappyTreeFriends#readme",
  "dependencies": {
    "happyfuntimes": "^0.2.1",
    "hft-game-utils": "^1.0.0",
    "hft-sample-ui": "^1.0.0",
    "optionator": "^0.8.2",
    "requirejs": "^2.3.2"
  },
  "devDependencies": {
    "cross-env": "^3.1.3",
    "electron": "^1.4.5",
    "electron-builder": "^8.6.0"
  }
}